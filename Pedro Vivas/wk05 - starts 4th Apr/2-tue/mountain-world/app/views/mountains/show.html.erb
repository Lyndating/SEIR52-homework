<h1>
    <%= @mountain.name %>
</h1>

<p>
    <%= image_tag @mountain.image, :class => 'feature' if @mountain.image.present?  %>
</p>

<ul>
    <li>Name: <%= @mountain.name %></li>
    <li>Ranking: <%= @mountain.ranking %> </li>
    <li>Height: <%= @mountain.height %> </li>
    <li>Country: <%= @mountain.country %> </li>
    <li>First Ascent: <%= @mountain.ascent %> </li>
</ul>

<div class="controls">
    <%= link_to "Edit mountain", edit_mountain_path(@mountain.id) %>
    <%= link_to "Delete mountain", delete_mountain_path(@mountain.id) %>
</div>