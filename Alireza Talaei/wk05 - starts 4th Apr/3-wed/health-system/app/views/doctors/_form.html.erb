<%= form_for @doctor do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
    <%= f.label :family %>
    <%= f.text_field :family %>
    <%= f.label :dob, 'Date of birth' %>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
    <%= f.label :speciality %>
    <%= f.text_field :speciality %>
    <%= f.label :image %>
    <%= f.url_field :image %>
    <%= f.submit %>
<% end %>