<%= form_for @beer do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
    <%= f.label :style %>
    <%= f.text_field :style  %>
    <%= f.label :abv%>
    <%= f.text_field :abv %>
    <%= f.label :image%>
    <%= f.text_field :image %>
    <%= f.submit %>

    <%= f.label :brewery_id %>
    <%= f.select :brewery_id, Brewery.pluck(:name, :id), :include_blank => true %>

<% end %>