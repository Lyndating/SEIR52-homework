<h1>New Film</h1>

<form action="/films" method="post">

    <ul>
        <li>
            <label>
            <span> Name:</span>    
            <input name="title" placeholder="Pulp Fiction" required>
            </label>
        </li>
    
        <li>
            <label>
                <span>Director:</span>
                <input name="director" placeholder="Quentin Tarantino">
            </label>
        </li>

        <li>
            <label>
               <span>Country:</span>
                <input name="country" placeholder="United States">
            </label>
        </li>

        <li>
            <label>
                <span>Year:</span>
                <input name="year" placeholder="1994">
            </label>
        </li>

        <li>
            <label>
                <span>Image:</span>
                <input type="url" name="image" placeholder="http://...">
            </label>
        </li>

    </ul>

    <button>Create Film</button>

</form>