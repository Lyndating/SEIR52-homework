<h1 class="show"> <%= @mountain.name%></h1>

<%= image_tag @mountain.image, :class => 'feature' if @mountain.image.present? %>

<ul>
    <li>Country: <%= @mountain.country %></li>
    <li>Total Runs/Trails: <%= @mountain.runs %></li>
    <li>Beginner: <%= number_to_percentage @mountain.beginner, precision: 0 %></li>
    <li>Intermediate: <%= number_to_percentage @mountain.intermediate, precision: 0 %></li>
    <li>Advanced: <%= number_to_percentage @mountain.advanced, precision: 0 %></li>
</ul>


<div class="controls">
    <%= link_to "Edit Mountain", edit_mountain_path(@mountain.id) %>
    <%= link_to "Delete Mountain", delete_mountain_path(@mountain.id) %>
</div>