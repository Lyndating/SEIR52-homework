<h1>Edit Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
     <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <label>
        Height:
        <input type="number" name="height" value="<%= @mountain.height %>">
    </label>

    <label>
        Country:
        <input name="country" value="<%= @mountain.country %>">
    </label>

    <label>
        Borders:
        <input  name="borders" value="<%= @mountain.borders %>">
    </label>

    <label>
        Year Scaled:
        <input  name="year_scaled" value="<%= @mountain.year_scaled %>">
    </label>

    <button class="inputButton">Update mountain</button>
</form>
