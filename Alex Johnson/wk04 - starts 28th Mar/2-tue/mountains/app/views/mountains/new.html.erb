<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post">
    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <label>
        Height:
        <input type="number" name="height">
    </label>

    <label>
        Country:
        <input name="country">
    </label>

    <label>
        Borders:
        <input  name="borders">
    </label>

    <label>
        Year Scaled:
        <input  name="year_scaled">
    </label>
    <button class="inputButton">Create mountain</button>
</form>
